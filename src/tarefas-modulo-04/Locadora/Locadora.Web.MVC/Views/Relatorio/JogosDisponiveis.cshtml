@model RelatorioModel
@{
    ViewBag.Title = "JogosDisponiveis";
}

<h2>Jogos Disponiveis</h2>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Preço</th>
        </tr>
    </thead>
    @foreach (var jogo in Model.Jogos)
    {
        <tr>
            <td>@jogo.Nome</td>
            <td>@jogo.Categoria</td>
            <td>@jogo.Preco.ToString("c")</td>
        </tr>
    }
</table>

<table>
    <tr><td>Quantidade de jogos: @Model.QuantidadeTotalDeJogos</td></tr>
    <tr><td>Jogo mais caro: @Model.JogoMaisCaro</td></tr>
    <tr><td>Jogo mais barato: @Model.JogoMaisBarato</td></tr>
</table>